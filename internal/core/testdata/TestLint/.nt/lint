rules:
- name: no-duplicate-note-title
- name: no-duplicate-slug
- name: min-lines-between-notes
  args: [2]
- name: no-free-note
- name: no-dangling-media
- name: no-dead-wikilink
- name: no-extension-wikilink
- name: no-ambiguous-wikilink
- name: check-attribute

schemas:
- name: Tags
  attributes:
    - name: tags
      type: array
      inherit: true
- name: Links
  attributes:
    - name: references
      type: array
      inherit: true
    - name: source
      inherit: true
- name: Quotes
  path: check-attribute/
  kind: quote
  attributes:
    - name: name
      type: string
      aliases: [author]
      required: true
- name: Books
  attributes:
    - name: isbn
      pattern: "^([0-9-]{10}|[0-9]{3}-[0-9]{10})$"
